<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:padding="@dimen/sixteen_dp_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAppearance="@style/CustomTextBody"
        android:maxLines="1"
        android:text="@string/placeholder_title"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/fourteen_sp_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_note_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_note_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/CustomTextBody"
        android:textColor="?attr/secondaryTextColor"
        android:textSize="@dimen/nine_sp_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_note_title"
        app:layout_constraintStart_toStartOf="@id/tv_note_title"
        app:layout_constraintTop_toBottomOf="@id/tv_note_title" />
</LinearLayout>

