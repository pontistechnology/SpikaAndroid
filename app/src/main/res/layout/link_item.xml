<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_link_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/four_dp_margin"
        android:background="@drawable/bg_message_received"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp_margin"
                android:layout_marginTop="@dimen/four_dp_margin"
                android:layout_marginBottom="@dimen/four_dp_margin"
                android:layout_weight="1"
                android:text="@string/username"
                android:textAppearance="@style/CustomTextLightBody"
                android:textSize="@dimen/fourteen_sp_text" />

            <TextView
                android:id="@+id/tv_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/eight_dp_margin"
                android:layout_marginTop="@dimen/four_dp_margin"
                android:layout_marginEnd="@dimen/eight_dp_margin"
                android:layout_marginBottom="@dimen/four_dp_margin"
                android:textAppearance="@style/CustomTextLightBody"
                android:textSize="@dimen/fourteen_sp_text" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp_margin"
            android:layout_marginEnd="@dimen/eight_dp_margin"
            android:background="@drawable/bg_message_received"
            android:backgroundTint="?attr/additionalColor">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_preview_image"
                android:layout_width="@dimen/sixty_four_dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_image_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ReceiverBubbleStyle" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/CustomTextBody"
                android:textSize="@dimen/fourteen_sp_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_preview_image"
                app:layout_constraintTop_toTopOf="@+id/iv_preview_image" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/eight_dp_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/CustomTextLightBody"
                android:textSize="@dimen/twelve_sp_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_preview_image"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp_margin"
            android:layout_marginTop="@dimen/four_dp_margin"
            android:layout_marginEnd="@dimen/eight_dp_margin"
            android:layout_marginBottom="@dimen/eight_dp_margin"
            android:autoLink="all"
            android:textAppearance="@style/CustomTextLightBody"
            android:textSize="@dimen/fourteen_sp_text" />
    </LinearLayout>
</LinearLayout>
