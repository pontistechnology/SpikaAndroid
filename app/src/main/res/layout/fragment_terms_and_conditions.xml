<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary"
    android:fitsSystemWindows="true"
    tools:context=".ui.onboarding.terms_and_conditions.TermsAndConditions">

    <ImageView
        android:id="@+id/iv_spika_logo"
        android:layout_width="@dimen/one_hundred_seventy_dp"
        android:layout_height="@dimen/one_hundred_seventy_dp"
        android:layout_margin="@dimen/twenty_dp_margin"
        android:src="@drawable/img_spika_logo_centered"
        app:layout_constraintBottom_toTopOf="@+id/tv_welcome_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_welcome_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/welcome_to_spika"
        android:textAppearance="@style/CustomTextHeading"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/thirty_sp_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_welcome_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_spika_logo" />

    <TextView
        android:id="@+id/tv_welcome_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:padding="@dimen/twenty_dp_margin"
        android:text="@string/welcome_description"
        android:textAppearance="@style/CustomTextBody"
        android:textColorLink="?attr/primaryColor"
        app:layout_constraintBottom_toTopOf="@+id/tv_agree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_agree"
        style="@style/CustomButton"
        app:cornerRadius="@dimen/sixteen_dp_margin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp_margin"
        android:layout_marginEnd="@dimen/sixteen_dp_margin"
        android:text="@string/agree_and_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
