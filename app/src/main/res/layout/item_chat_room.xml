<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:paddingEnd="@dimen/twenty_dp_margin"
    tools:ignore="contentDescription">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_room_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/sixteen_dp_margin"
        android:layout_marginTop="@dimen/sixteen_dp_margin"
        android:layout_marginBottom="@dimen/sixteen_dp_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/img_user_avatar"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circle" />

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="@dimen/sixteen_dp_margin"
        android:ellipsize="end"
        android:letterSpacing="0.1"
        android:maxLines="1"
        android:textAppearance="@style/CustomTitleBold"
        android:textSize="@dimen/fourteen_sp_text"
        app:layout_constraintEnd_toStartOf="@id/tv_message_time"
        app:layout_constraintStart_toEndOf="@+id/iv_room_image"
        app:layout_constraintTop_toTopOf="@+id/iv_room_image" />

    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/tv_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="@dimen/four_dp_margin"
        android:drawableTint="?attr/primaryTextColor"
        android:ellipsize="end"
        android:letterSpacing="0.1"
        android:maxLines="1"
        android:textAppearance="@style/CustomTextBody"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/twelve_sp_text"
        app:layout_constraintEnd_toStartOf="@+id/tv_new_messages"
        app:layout_constraintStart_toEndOf="@+id/tv_username"
        app:layout_constraintTop_toBottomOf="@id/tv_room_name" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/four_dp_margin"
        android:ellipsize="end"
        android:letterSpacing="0.1"
        android:maxLines="1"
        android:textAppearance="@style/CustomTextBody"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/twelve_sp_text"
        app:layout_constraintEnd_toStartOf="@+id/tv_last_message"
        app:layout_constraintStart_toStartOf="@+id/tv_room_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_room_name" />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/eleven_sp_text"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/tv_last_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_room_name" />

    <ImageView
        android:id="@+id/iv_muted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/eight_dp_margin"
        android:src="@drawable/img_muted_chat"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/iv_room_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_room_image"
        app:layout_constraintTop_toTopOf="@+id/iv_room_image"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_pinned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_pin_chat"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_room_image"
        app:layout_constraintStart_toStartOf="@+id/iv_room_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_room_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_new_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp_margin"
        android:background="@drawable/img_selector_background_blue"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="@string/placeholder_number"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp_text"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/tv_last_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_last_message" />

</androidx.constraintlayout.widget.ConstraintLayout>
