<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.create_room.GroupInformationFragment"
    tools:ignore="contentDescription">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/eight_dp_margin"
        android:paddingTop="@dimen/twenty_dp_margin"
        android:paddingBottom="@dimen/twenty_dp_margin"
        android:text="@string/name_the_group"
        android:textAppearance="@style/CustomTextBody"
        android:textSize="@dimen/fifteen_sp_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:textAppearance="@style/CustomTextBody"
        android:padding="@dimen/twenty_dp_margin"
        android:elevation="@dimen/eight_dp_margin"
        android:src="@drawable/img_arrow_back_chat"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <include
        android:id="@+id/profile_picture"
        layout="@layout/profile_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/et_enter_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_enter_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp_margin"
        android:layout_marginTop="@dimen/twenty_dp_margin"
        android:layout_marginEnd="@dimen/sixteen_dp_margin"
        android:layout_marginBottom="@dimen/sixteen_dp_margin"
        android:background="@drawable/bg_text_field"
        android:backgroundTint="?attr/secondaryColor"
        android:hint="@string/enter_group_name"
        android:maxLength="70"
        android:padding="@dimen/sixteen_dp_margin"
        android:maxLines="1"
        android:textAppearance="@style/CustomTextBody"
        android:textColor="?attr/primaryTextColor"
        android:textColorHint="?attr/primaryTextColor"
        android:textSize="@dimen/fourteen_sp_text"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/tv_people_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture" />

    <TextView
        android:id="@+id/tv_people_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sixteen_dp_margin"
        android:textAppearance="@style/CustomTitleBold"
        android:textColor="?attr/primaryTextColor"
        android:text="@string/s_people_selected"
        android:textSize="@dimen/sixteen_sp_text"
        app:layout_constraintBottom_toTopOf="@id/rv_contacts"
        app:layout_constraintStart_toStartOf="@+id/et_enter_username"
        app:layout_constraintTop_toBottomOf="@id/et_enter_username" />

    <ImageView
        android:id="@+id/iv_add_more_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/et_enter_username"
        app:layout_constraintBottom_toTopOf="@id/rv_contacts"
        app:layout_constraintTop_toBottomOf="@id/et_enter_username"
        android:src="@drawable/img_add"
        app:tint="@color/primary_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_contacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_enter_username"
        app:layout_constraintStart_toStartOf="@+id/tv_people_selected"
        app:layout_constraintTop_toBottomOf="@id/tv_people_selected" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/twenty_four_dp_margin"
        android:layout_marginBottom="@dimen/twenty_four_dp_margin"
        android:backgroundTint="?attr/primaryColor"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/img_checkmark"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

