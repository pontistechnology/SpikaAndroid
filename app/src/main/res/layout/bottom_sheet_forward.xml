<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_corners_top"
    android:backgroundTint="?attr/secondaryColor"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="contentDescription">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_dp_margin"
        android:text="@string/forward_messages"
        android:textAppearance="@style/CustomTextBody"
        android:textSize="@dimen/eighteen_sp_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_forward"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/one_hundred_twenty_eight"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/sixteen_dp_margin"
        android:padding="@dimen/sixteen_dp_margin"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <LinearLayout
        android:id="@+id/ll_forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_rooms_contacts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_two_dp"
            android:layout_marginStart="@dimen/sixteen_dp_margin"
            android:layout_marginEnd="@dimen/sixteen_dp_margin"
            android:background="@drawable/bg_input"
            android:hint="@string/search"
            android:padding="@dimen/sixteen_dp_margin"
            android:theme="@style/CustomSearchView"
            app:closeIcon="@drawable/img_close"
            app:iconifiedByDefault="false"
            app:searchIcon="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp_margin"
            android:layout_marginBottom="@dimen/eight_dp_margin"
            android:paddingStart="@dimen/sixteen_dp_margin"
            android:paddingEnd="@dimen/sixteen_dp_margin"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_contacts"
                style="@style/HalfRightLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/four_dp_margin"
                android:layout_weight="1"
                android:backgroundTint="?attr/primaryColor"
                android:text="@string/contacts" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_groups"
                style="@style/HalfButtonLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/four_dp_margin"
                android:layout_weight="1"
                android:backgroundTint="?attr/fourthAdditionalColor"
                android:text="@string/groups_label" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp_margin"
            android:layout_marginEnd="@dimen/eight_dp_margin"
            android:nestedScrollingEnabled="false"
            android:paddingStart="@dimen/sixteen_dp_margin"
            android:paddingEnd="@dimen/sixteen_dp_margin"
            android:visibility="gone"
            tools:listitem="@layout/item_new_room_contact" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/fifty_two_dp"
            android:minHeight="@dimen/five_hundred_twelve"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:id="@+id/tv_no_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen_dp_margin"
            android:layout_marginBottom="@dimen/sixteen_dp_margin"
            android:gravity="center"
            android:minHeight="@dimen/five_hundred_twelve"
            android:text="@string/no_results"
            android:textAppearance="@style/CustomTextBody"
            android:textSize="@dimen/twenty_sp_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_empty_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen_dp_margin"
            android:layout_marginBottom="@dimen/sixteen_dp_margin"
            android:gravity="center"
            android:textAppearance="@style/CustomTextBody"
            android:textSize="@dimen/twenty_sp_text"
            android:visibility="gone" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/sixteen_dp_margin"
        android:backgroundTint="?attr/primaryColor"
        android:src="@drawable/img_send_button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/primaryTextColor" />

    <ImageView
        android:id="@+id/iv_close_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen_dp_margin"
        app:layout_constraintBottom_toTopOf="@+id/ll_forward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_close" />

</androidx.constraintlayout.widget.ConstraintLayout>