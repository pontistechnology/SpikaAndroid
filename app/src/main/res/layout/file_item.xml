<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_file_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_message_received"
    android:layout_margin="@dimen/four_dp_margin">

    <TextView
        android:id="@+id/tv_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight_dp_margin"
        android:layout_marginTop="@dimen/eight_dp_margin"
        android:text="@string/username"
        android:textAppearance="@style/CustomTextBody"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_media_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp_margin"
        android:layout_marginBottom="@dimen/sixteen_dp_margin"
        android:padding="@dimen/eight_dp_margin"
        android:src="@drawable/img_pdf_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_sender"
        app:layout_constraintTop_toBottomOf="@+id/tv_sender"
        app:tint="?attr/primaryColor" />

    <TextView
        android:id="@+id/tv_file_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight_dp_margin"
        android:layout_marginEnd="@dimen/eight_dp_margin"
        android:text="@string/file"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/CustomTitleBold"
        android:textSize="@dimen/fifteen_sp_text"
        app:layout_constraintEnd_toStartOf="@+id/iv_download_file"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_media_item"
        app:layout_constraintTop_toTopOf="@+id/iv_media_item" />

    <TextView
        android:id="@+id/tv_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/CustomTextBody"
        app:layout_constraintBottom_toBottomOf="@+id/iv_media_item"
        app:layout_constraintStart_toStartOf="@+id/tv_file_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_file_title" />

    <TextView
        android:id="@+id/tv_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp_margin"
        android:layout_marginEnd="@dimen/sixteen_dp_margin"
        android:textSize="@dimen/eleven_sp_text"
        android:textAppearance="@style/CustomTextBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_download_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sixteen_dp_margin"
        android:src="@drawable/img_download_file"
        app:layout_constraintBottom_toBottomOf="@+id/tv_file_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_file_title"
        app:tint="?attr/primaryColor" />
</androidx.constraintlayout.widget.ConstraintLayout>