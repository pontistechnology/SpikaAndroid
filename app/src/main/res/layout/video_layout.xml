<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_videos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/iv_play_button"
        android:layout_width="@dimen/seventy_eight_dp"
        android:layout_height="@dimen/seventy_eight_dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/eight_dp_margin"
        android:layout_marginTop="@dimen/eight_dp_margin"
        android:layout_marginEnd="@dimen/eight_dp_margin"
        android:layout_marginBottom="@dimen/eight_dp_margin"
        android:adjustViewBounds="true"
        android:elevation="@dimen/four_dp_margin"
        android:visibility="gone"
        app:srcCompat="@drawable/img_play" />

    <ProgressBar
        android:id="@+id/pb_media_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_video_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:cardCornerRadius="@dimen/eight_dp_margin"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true" />

    <TextView
        android:id="@+id/tv_video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="@dimen/sixteen_dp_margin"
        android:layout_marginTop="@dimen/eight_dp_margin"
        android:elevation="@dimen/four_dp_margin"
        android:gravity="bottom"
        android:textAppearance="@style/CustomTextBody"
        android:textColor="@color/white"
        android:textSize="@dimen/twelve_sp_text"
        android:visibility="visible" />
</FrameLayout>
