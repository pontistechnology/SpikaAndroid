<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_dp_margin"
        android:layout_marginTop="@dimen/four_dp_margin"
        android:text="@string/category_placeholder"
        android:textAppearance="@style/CustomTextHeading"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/thirty_two_sp_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_user_image"
        android:layout_width="@dimen/forty_two_dp"
        android:layout_height="@dimen/forty_two_dp"
        android:layout_marginStart="@dimen/twenty_dp_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/img_user_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_username"
        app:shapeAppearanceOverlay="@style/circle" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_dp_margin"
        android:layout_marginTop="@dimen/eight_dp_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/enter_username"
        android:textAppearance="@style/CustomTextHeading"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/fourteen_sp_text"
        app:layout_constraintEnd_toStartOf="@+id/iv_checked_user"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_user_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_dp_margin"
        android:layout_marginBottom="@dimen/eight_dp_margin"
        android:fontFamily="@font/roboto_light"
        android:text="@string/enter_username"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/twelve_sp_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_checked_user"
        app:layout_constraintStart_toEndOf="@id/iv_user_image"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_checked_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/twenty_dp_margin"
        android:src="@drawable/img_checkmark"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_username"
        app:tint="?attr/primaryTextColor" />

    <View
        android:id="@+id/transparent_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="@dimen/eight_dp_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
