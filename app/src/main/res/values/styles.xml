<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.Dialog_Dim" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--  Different corner styles  -->
    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="round">
        <item name="cornerSize">10%</item>
    </style>

    <style name="big_profile_picture">
        <item name="cornerSizeBottomLeft">80dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="CustomTextHeading" parent="Theme.ExampleApp">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/twenty_four_sp_text</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="CustomTextBody" parent="Theme.ExampleApp">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">@dimen/fifteen_sp_text</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="CustomSystemBody" parent="Theme.ExampleApp">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">@dimen/eleven_sp_text</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="CustomTextLightBody" parent="Theme.ExampleApp">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">@dimen/fifteen_sp_text</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>
        <item name="searchIcon">@drawable/img_search</item>
        <item name="queryBackground">@null</item>
        <item name="closeIcon">@drawable/img_search_close</item>
    </style>

    <!-- Button styles   -->
    <style name="CustomButton" parent="Base.Theme.AppCompat">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAppearance">@style/CustomTextBody</item>
        <item name="android:textSize">@dimen/fourteen_sp_text</item>
        <item name="android:padding">@dimen/sixteen_dp_margin</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="HalfButtonLeft" parent="CustomButton">
        <item name="shapeAppearanceOverlay">@style/LeftButtonShapeAppearance</item>
    </style>

    <style name="LeftButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="HalfRightLeft" parent="CustomButton">
        <item name="shapeAppearanceOverlay">@style/RightButtonShapeAppearance</item>
    </style>

    <style name="RightButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <!-- Reply images styles -->
    <style name="reply_image_receiver">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="reply_image_sender">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <!--  Chat items style  -->
    <style name="SenderBubbleStyle">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="PreviewBubbleStyle">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
    </style>

    <style name="ReceiverBubbleStyle">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!--  CheckBox style  -->
    <style name="CustomCheckBox" parent="Base.Theme.AppCompat">
        <item name="colorAccent">?attr/primaryColor</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">?attr/secondaryTextColor
        </item> <!-- for check state -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontWeight">500</item>
    </style>

    <!--  Selected text style  -->
    <style name="CustomSelectText" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/selected_text</item>
        <item name="colorControlActivated">@color/selected_text</item>
    </style>

    <!--  Toolbar tiles style  -->
    <style name="CustomTitleBold" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/thirty_two_sp_text</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="CustomTitleNormal" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/fourteen_sp_text</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <!-- Toolbar style - SearchView  -->
    <style name="CustomToolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="searchViewStyle">@style/CustomSearchBar</item>
        <item name="android:editTextColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>
        <item name="android:colorControlNormal">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/fourteen_sp_text</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="colorAccent">?attr/primaryTextColor</item>
    </style>

    <style name="CustomSearchBar" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="android:editTextColor">?attr/primaryTextColor</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">?attr/primaryTextColor</item>
        <item name="editTextColor">?attr/primaryTextColor</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>
        <item name="android:textSize">@dimen/fourteen_sp_text</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Text Input Layout   -->
    <style name="CustomEditTextLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">?attr/primaryColor</item>
        <item name="android:colorAccent">?attr/primaryColor</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterTextColor">?attr/secondaryTextColor</item>
        <item name="cursorColor">?attr/primaryColor</item>
        <item name="hintTextColor">?attr/secondaryTextColor</item>
        <item name="android:textColorHint">?attr/secondaryTextColor</item>
        <item name="background">@null</item>
    </style>

    <!--  Bottom sheet style  -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!--  Navigation animations  -->
    <style name="MyCustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/nav_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/nav_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/nav_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/nav_slide_out_right</item>
    </style>

    <!--  Options style  -->
    <style name="FirstOptionStyle">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="OptionStyle">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="LastOptionStyle">
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sixteen_sp_text</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">?attr/primaryTextColor</item>
        <item name="colorSurface">@color/secondWarningColor</item>
        <item name="colorOnSurface">?attr/primaryColor</item>
    </style>
</resources>
